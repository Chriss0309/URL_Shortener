<div class="container mt-5">
  <h1>Usage Statistics</h1>
  
  <div class="card mt-4">
    <div class="card-body">
      <h5 class="card-title">Total Clicks: <%= @visits.count %></h5>
      
      <table class="table mt-4">
        <thead>
          <tr>
            <th>Time</th>
            <th>Location</th>
            <th>Referrer</th>
          </tr>
        </thead>
        <tbody>
          <% @visits.each do |visit| %>
            <tr>
              <td><%= visit.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
              <td><%= "#{visit.city}, #{visit.country}" %></td>
              <td><%= visit.referer || "Direct" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>